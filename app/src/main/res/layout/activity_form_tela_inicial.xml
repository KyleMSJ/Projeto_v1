<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="92dp">
    <!-- TopBar -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="274dp"
        android:layout_height="147dp"
        android:src="@drawable/logo_transparente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ossos_config" />
    </RelativeLayout>

    <!-- Frame Lucky -->
    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponentes"
        android:layout_width="292dp"
        android:layout_height="202dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/transparent"
        android:layout_width="154dp"
        android:layout_height="173dp"
        android:src="@drawable/lucky"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lucky"
        android:textColor="#313131"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:layout_marginTop="44dp"/>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descricao"
        style="@style/descricao"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:layout_marginTop="77dp"
        android:gravity="top"/>

    <!-- Frame Buzz -->
    <View
        android:id="@+id/containerComponents1"
        style="@style/ContainerComponentes"
        android:layout_width="292dp"
        android:layout_height="202dp"
        android:layout_marginTop="326dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/transparent"
        android:layout_width="154dp"
        android:layout_height="173dp"
        android:src="@drawable/buzz"
        app:layout_constraintStart_toStartOf="@id/containerComponents1"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents1"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buzz"
        android:textColor="#313131"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/containerComponents1"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents1"
        android:layout_marginTop="44dp"/>

    <TextView
        android:id="@+id/descricao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descricao1"
        style="@style/descricao"
        app:layout_constraintStart_toStartOf="@id/containerComponents1"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents1"
        android:layout_marginTop="77dp"
        android:gravity="top"/>

    <!-- Frame Lika -->
    <View
        android:id="@+id/containerComponents2"
        style="@style/ContainerComponentes"
        android:layout_width="292dp"
        android:layout_height="202dp"
        android:layout_marginTop="553dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/transparent"
        android:layout_width="154dp"
        android:layout_height="173dp"
        android:src="@drawable/lika"
        app:layout_constraintStart_toStartOf="@id/containerComponents2"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents2"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lika"
        android:textColor="#313131"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/containerComponents2"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents2"
        android:layout_marginTop="44dp"/>

    <TextView
        android:id="@+id/descricao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descricao2"
        style="@style/descricao"
        app:layout_constraintStart_toStartOf="@id/containerComponents2"
        android:layout_marginStart="178dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents2"
        android:layout_marginTop="77dp"
        android:gravity="top"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/design_default_color_surface"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="90dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>