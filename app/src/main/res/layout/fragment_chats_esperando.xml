<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChatsMensagensFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Barra de pesquisa -->
            <EditText
                android:id="@+id/pesquisa"
                android:layout_width="321dp"
                android:layout_height="45dp"
                android:drawableStart="@drawable/lupa"
                android:hint="  Pesquisar"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Mensagens / Esperando -->
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pesquisa"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/mensagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout"
                android:textFontWeight="300"
                android:text="Mensagens"
                android:background="@color/transparent"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                />

            <View
                android:id="@+id/view"
                android:layout_width="205dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="#EDE6FB"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@id/mensagens" />


            <TextView
                android:id="@+id/esperando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="300"
                android:text="Esperando"
                android:textColor="@android:color/darker_gray"
                android:background="@color/transparent"
                android:layout_marginRight="35dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout" />

            <View
                android:layout_width="205dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="@color/purple"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="@id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@id/esperando" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent">

                <!-- Pets -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/lucky" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:text="Lucky"
                    android:textColor="#313131"
                    android:textSize="24sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pacoca"
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pacoca" />

                <TextView
                    android:id="@+id/pacoca_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:text="PaÃ§oca"
                    android:textColor="#313131"
                    android:textSize="24sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/agatha"
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/agatha" />

                <TextView
                    android:id="@+id/agatha_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:text="Agatha"
                    android:textColor="#313131"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/buzz"
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/buzz" />

                <TextView
                    android:id="@+id/buzz_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:text="Buzz"
                    android:textColor="#313131"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/pacoca"
                    app:layout_constraintTop_toTopOf="@+id/agatha_txt" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lika"
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/lika" />

                <TextView
                    android:id="@+id/lika_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:text="Lika"
                    android:textColor="#313131"
                    android:textSize="24sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/piter"
                    android:layout_width="181dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/piter" />

                <TextView
                    android:id="@+id/piter_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:text="Piter"
                    android:textColor="#313131"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/piter"
                    app:layout_constraintTop_toTopOf="@+id/lika_txt" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>