<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameMensagens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChatsMensagensFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Barra de pesquisa -->
            <EditText
                android:id="@+id/pesquisa"
                android:layout_width="321dp"
                android:layout_height="45dp"
                android:drawableStart="@drawable/lupa"
                android:hint="  Pesquisar"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Mensagens / Esperando -->
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/pesquisa" />

            <TextView
                android:id="@+id/mensagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                android:text="Mensagens"
                android:textColor="@android:color/darker_gray"
                android:textFontWeight="300"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout" />

            <View
                android:layout_width="205dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="@color/purple"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@id/mensagens" />

            <TextView
                android:id="@+id/esperando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:background="@color/transparent"
                android:text="Esperando"
                android:textColor="@android:color/darker_gray"
                android:textFontWeight="300"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout" />

            <View
                android:layout_width="205dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="#EDE6FB"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="@id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@id/esperando" />


            <!-- Chat Lucky -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lucky"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/lucky"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/mensagens" />

            <TextView
                android:id="@+id/lucky_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="75dp"
                android:text="Lucky"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/lucky"
                app:layout_constraintTop_toTopOf="@+id/mensagens" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lucky" />

            <!-- Chat Paçoca -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pacoca"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/pacoca"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/lucky" />

            <TextView
                android:id="@+id/pacoca_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:text="Paçoca"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/pacoca"
                app:layout_constraintTop_toTopOf="@+id/lucky_txt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pacoca" />

            <!-- Chat Agatha -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/agatha"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/agatha"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/pacoca" />

            <TextView
                android:id="@+id/agatha_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:text="Agatha"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/pacoca"
                app:layout_constraintTop_toTopOf="@+id/pacoca_txt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/agatha" />

            <!-- Chat Buzz -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/buzz"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/buzz"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/agatha" />

            <TextView
                android:id="@+id/buzz_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:text="Buzz"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/pacoca"
                app:layout_constraintTop_toTopOf="@+id/agatha_txt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buzz" />

            <!-- Chat Lika -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lika"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/lika"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/buzz" />

            <TextView
                android:id="@+id/lika_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:text="Lika"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/lika"
                app:layout_constraintTop_toTopOf="@+id/buzz_txt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lika" />

            <!-- Chat Piter -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/piter"
                android:layout_width="96dp"
                android:layout_height="88dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/piter"
                app:layout_constraintStart_toStartOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="@id/lika" />

            <TextView
                android:id="@+id/piter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:text="Piter"
                android:textColor="#313131"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/piter"
                app:layout_constraintTop_toTopOf="@+id/lika_txt" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/piter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>